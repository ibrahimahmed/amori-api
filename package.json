{
  "name": "etera-template",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.0.3",
    "prettier": "^3.6.0",
    "tsx": "^4.20.3"
  },
  "scripts": {
    "setup": "node scripts/setup-env.js",
    "migrate": "npx @better-auth/cli migrate --config ./src/auth/index.ts",
    "generate": "npx @better-auth/cli generate --config ./src/auth/index.ts",
    "dev": "bun --hot run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target=node",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:auth": "bun test tests/auth/",
    "test:middleware": "bun test tests/middleware/",
    "test:routes": "bun test tests/routes/",
    "test:integration": "bun test tests/integration/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:src": "prettier --write src/ tests/ examples/",
    "check": "bun run format:check",
    "fix": "bun run format",
    "db:migrate": "bun run migrations/migrate.ts",
    "db:seed": "bun run migrations/seed.ts",
    "deploy:staging": "./scripts/deploy.sh --environment staging",
    "deploy:production": "./scripts/deploy.sh --environment production",
    "deploy:dry-run": "./scripts/deploy.sh --dry-run",
    "infra:plan": "cd terraform && terraform plan",
    "infra:apply": "cd terraform && terraform apply",
    "load-test": "artillery run tests/performance/load-test.yml",
    "security:scan": "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy image etera-auth:latest",
    "docker:build": "docker build -t etera-auth:latest .",
    "docker:run": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f auth-service",
    "docker:stop": "docker-compose down",
    "db:reset": "docker exec -it etera-postgres psql -U postgres -c \"DROP DATABASE IF EXISTS authdb;\" && docker exec -it etera-postgres psql -U postgres -c \"CREATE DATABASE authdb;\" && redis-cli -a redis_secret -h localhost -p 6379 --scan --pattern '*email-otp*'",
    "db:exec": "docker exec -it etera-postgres psql -U postgres -d authdb",
    "redis:exec": "redis-cli -h localhost -p 6379",
    "redis:scan-otp": "redis-cli -a redis_secret -h localhost -p 6379 --scan --pattern '*email-otp*'",
    "redis:get-otp": "redis-cli -a redis_secret -h localhost -p 6379 get 'better-auth:email-otp:moeid@etera.tech'"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/jwt": "^1.3.1",
    "@elysiajs/swagger": "^1.3.0",
    "@types/pg": "^8.15.4",
    "better-auth": "^1.2.12",
    "dotenv": "^16.5.0",
    "elysia": "^1.3.5",
    "google-auth-library": "^10.1.0",
    "ioredis": "^5.6.1",
    "kafkajs": "^2.2.4",
    "kysely": "^0.28.2",
    "pg": "^8.16.0",
    "phone": "^3.1.62",
    "resend": "^4.6.0",
    "twilio": "^5.7.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  }
}
